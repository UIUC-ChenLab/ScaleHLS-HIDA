    "version": "0.2.0",
    "configurations": [
        {
            "name": "gdb_scalehls-translate",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/scalehls-translate",
            "args": ["-scalehls-emit-hlscpp", "ppcg.mlir", "-debug-only", "scalehls-emit-hlscpp"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/.samples/polybench/correlation",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "gdb_scalehls-opt",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/scalehls-opt",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/.samples/polybench/correlation",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}